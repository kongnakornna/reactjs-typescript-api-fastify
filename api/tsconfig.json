{
  "compilerOptions": {
    "target": "es5",                         
    "module": "commonjs",                     
    "sourceMap": true,                    
    "outDir": "./dist",                       
    "rootDir": "./src",                        
    "removeComments": true,               
    "strict": true,                        
    "baseUrl": "./",   
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],                   
    "esModuleInterop": true,                
    "experimentalDecorators": true,   
    "skipLibCheck": true,     
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,   
  },
  "include": [".env","next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}